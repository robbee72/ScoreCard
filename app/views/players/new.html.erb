<h1>Create an player</h1>
  <%= form_for @player do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ranking %><br/>
    <%= f.number_field :ranking, max: 100 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <% end %>
  <% if @player.errors.any? %>
  <h2>The following errors prevented the player from getting created</h2>
    <ul>
      <% @player.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
    <%= link_to "Back to players listing", players_path %>
